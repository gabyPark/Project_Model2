<script type="text/javascript">

$("#authPart0").click(function(){

    $("#oneChance").show();

    $("#oneDay").show();

    $("input:radio[name='surveyDbltype'][value='0']").prop("checked", true);

});





$("#authPart1").click(function(){

    $("#oneChance").hide();

    $("#oneDay").hide();

    $("input:radio[name='surveyDbltype'][value='2']").prop("checked", true);

});

</script>



